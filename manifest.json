{

  "manifest_version": 2,
  "name": "Context Browser",
  "version": "1.0",

  "description": "Improves browsing experience with CONTEXT.",
  
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["openIFrame.js"],
      "css": ["iframe.css"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_icon": "icons/icon-32.png",
    "default_title": "Context Browser",
    "default_popup": "context_graph.html"
  }

}