{

  "manifest_version": 2,
  "name": "Context Browser",
  "version": "1.0",

  "description": "Improves browsing experience with CONTEXT.",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>",
    "webNavigation"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": [
          "jquery/jquery-3.5.1.min.js",
          "jquery/jquery-ui.min.js",
          "openIFrame.js"
      ],
      "css": [
          "iframe.css",
          "jquery/jquery-ui.min.css",
          "jquery/jquery-ui.structure.min.css",
          "jquery/jquery-ui.theme.min.css"
      ]
    }
  ],

  "background": {
    "scripts": ["nanoid.js", "arboreal.js", "background.js"]
  },

  "browser_action": {
    "default_icon": "icons/icon-32.png",
    "default_title": "Context Browser",
    "default_popup": "context_graph.html"
  },

  "web_accessible_resources": ["icons/*"]
}
